class Solution {
    
    public boolean check(int[] nums) {
       int peek=0; int n=nums.length;
       for(int i=1;i<n;i++){
        if(nums[i-1]>nums[i]){
            peek++;
        }
       }
       if(nums[n-1]>nums[0]){
        peek++;
       }
       if(peek<2){
        return true;
       }
       return false;
    }
}
